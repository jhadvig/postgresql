{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "pg-replica-example",
    "creationTimestamp": null,
    "annotations": {
      "description": "PostgreSQL Replication Example",
      "iconClass": "icon-database",
      "tags": "database,postgresql,replication"
    }
  },
  "parameters": [
    {
      "name": "POSTGRESQL_USER",
      "description": "The username that clients will use to connect to PostgreSQL server",
      "value": "user"
    },
    {
      "name": "POSTGRESQL_PASSWORD",
      "description": "The password for the PostgreSQL master user",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{12}"
    },
    {
      "name": "POSTGRESQL_DATABASE",
      "description": "The name of the database that will be created",
      "value": "userdb"
    },
    {
      "name": "POSTGRESQL_ADMIN_PASSWORD",
      "description": "The password for the PostgreSQL adminitrator",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{12}"
    },
    {
      "name": "POSTGRESQL_MASTER_SERVICE_NAME",
      "description": "The name of the MongoDB Service (used to DNS lookup, default: 'mongodb')",
      "value": "postgresql-master"
    },
    {
      "name": "POSTGRESQL_SLAVE_SERVICE_NAME",
      "description": "The name of the MongoDB Service (used to DNS lookup, default: 'mongodb')",
      "value": "postgresql-slave"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${POSTGRESQL_MASTER_SERVICE_NAME}",
        "labels": {
          "name": "${POSTGRESQL_MASTER_SERVICE_NAME}"
        }
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "${POSTGRESQL_MASTER_SERVICE_NAME}"
        },
        "portalIP": "None",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${POSTGRESQL_SLAVE_SERVICE_NAME}",
        "labels": {
          "name": "${POSTGRESQL_SLAVE_SERVICE_NAME}"
        }
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "${POSTGRESQL_SLAVE_SERVICE_NAME}"
        },
        "portalIP": "None",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },

    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${POSTGRESQL_MASTER_SERVICE_NAME}",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${POSTGRESQL_MASTER_SERVICE_NAME}"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "${POSTGRESQL_MASTER_SERVICE_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "server",
                "image": "openshift/postgresql-92-centos7",
                "command": [
                  "run-postgresql-master.sh"
                ],
                "ports": [
                  {
                    "containerPort": 5432,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "POSTGRESQL_USER",
                    "value": "${POSTGRESQL_USER}"
                  },
                  {
                    "name": "POSTGRESQL_PASSWORD",
                    "value": "${POSTGRESQL_PASSWORD}"
                  },
                  {
                    "name": "POSTGRESQL_DATABASE",
                    "value": "${POSTGRESQL_DATABASE}"
                  },
                  {
                    "name": "POSTGRESQL_ADMIN_PASSWORD",
                    "value": "${POSTGRESQL_ADMIN_PASSWORD}"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      },
      "status": {}
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${POSTGRESQL_SLAVE_SERVICE_NAME}",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${POSTGRESQL_SLAVE_SERVICE_NAME}"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "${POSTGRESQL_SLAVE_SERVICE_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "server",
                "image": "openshift/postgresql-92-centos7",
                "command": [
                  "run-postgresql-slave.sh"
                ],
                "ports": [
                  {
                    "containerPort": 5432,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "POSTGRESQL_USER",
                    "value": "${POSTGRESQL_USER}"
                  },
                  {
                    "name": "POSTGRESQL_PASSWORD",
                    "value": "${POSTGRESQL_PASSWORD}"
                  },
                  {
                    "name": "POSTGRESQL_DATABASE",
                    "value": "${POSTGRESQL_DATABASE}"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      },
      "status": {}
    }
  ]
}
